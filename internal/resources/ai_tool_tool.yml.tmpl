# Metadata for {{.DisplayName}} (generated by `dv config ai-tool`)
# Update name/summary/description/parameters here; keep the script in script.js.
name: {{quote .Name}}
tool_name: {{quote .ToolName}}
summary: {{quote .Summary}}
description: {{quote .Description}}
{{- if .Parameters }}
parameters:
{{- range .Parameters }}
  - name: {{quote .Name}}
    type: {{quote .Type}}
    description: {{quote .Description}}
    required: {{if .Required}}true{{else}}false{{end}}
    {{- if .Enum }}
    enum:
    {{- range .Enum }}
      - {{quote .}}
    {{- end }}
    {{- end }}
{{- end }}
{{- else }}
parameters: []
{{- end }}
rag:
  chunk_tokens: {{.RagChunkTokens}}
  chunk_overlap_tokens: {{.RagChunkOverlapTokens}}
  llm_model_id: null # set to an indexing LLM ID when this tool uploads PDFs/images
